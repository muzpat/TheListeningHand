        //   else{
        //       alert('jQuery.ui loaded');
        //   }
            var ch = e.text.length;
            if (ch > 8) {
                $('<div></div>').appendTo('body')
    .html('<div><h6>' + 'This Slot Has Been Taken!'
          + '<br/>   <p> </p>'
+ '</h6></div>')
    .dialog({
        modal: true, title: 'Error ', zIndex: 10000, autoOpen: true,
        width: 'auto', resizable: false,
        buttons: {
